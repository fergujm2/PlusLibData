        <Transform Name="ecmFrame4ToBase" />
        <Transform Name="ecmFrame5ToBase" />
        <Transform Name="ecmFrame6ToBase" />
        <Transform Name="ecmFrame7ToBase" />
      </TransformNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>
</PlusConfiguration>