        <DataSource Type="Tool" Id="psm2Frame7ToBase" PortName="psm2Frame7ToBase"/>
        
        <DataSource Type="Tool" Id="ecmFrame1ToBase" PortName="ecmFrame1ToBase"/>
        <DataSource Type="Tool" Id="ecmFrame2ToBase" PortName="ecmFrame2ToBase"/>
        <DataSource Type="Tool" Id="ecmFrame3ToBase" PortName="ecmFrame3ToBase"/>
        <DataSource Type="Tool" Id="ecmFrame4ToBase" PortName="ecmFrame4ToBase"/>
        <DataSource Type="Tool" Id="ecmFrame5ToBase" PortName="ecmFrame5ToBase"/>
        <DataSource Type="Tool" Id="ecmFrame6ToBase" PortName="ecmFrame6ToBase"/>
        <DataSource Type="Tool" Id="ecmFrame7ToBase" PortName="ecmFrame7ToBase"/>
      </DataSources>
      
      <OutputChannels>
        <OutputChannel Id="TrackerStream" >
          <DataSource  Id="psm1BaseToWorld" />
          <DataSource  Id="psm2BaseToWorld" />
          <DataSource  Id="ecmBaseToWorld" />
          
          <DataSource  Id="psm1Frame1ToBase" />
          <DataSource  Id="psm1Frame2ToBase" />
          <DataSource  Id="psm1Frame3ToBase" />
          <DataSource  Id="psm1Frame4ToBase" />
          <DataSource  Id="psm1Frame5ToBase" />
          <DataSource  Id="psm1Frame6ToBase" />
          <DataSource  Id="psm1Frame7ToBase" />
          
          <DataSource  Id="psm2Frame1ToBase" />
          <DataSource  Id="psm2Frame2ToBase" />
          <DataSource  Id="psm2Frame3ToBase" />
          <DataSource  Id="psm2Frame4ToBase" />
          <DataSource  Id="psm2Frame5ToBase" />
          <DataSource  Id="psm2Frame6ToBase" />
          <DataSource  Id="psm2Frame7ToBase" />
          
          <DataSource  Id="ecmFrame1ToBase" />
          <DataSource  Id="ecmFrame2ToBase" />
          <DataSource  Id="ecmFrame3ToBase" />
          <DataSource  Id="ecmFrame4ToBase" />
          <DataSource  Id="ecmFrame5ToBase" />
          <DataSource  Id="ecmFrame6ToBase" />
          <DataSource  Id="ecmFrame7ToBase" />
        </OutputChannel>
      </OutputChannels>
    </Device>

    <Device
      Id="CaptureDevice"
      Type="VirtualCapture"
      BaseFilename="RecordingTest.igs.mha"
      EnableCapturingOnStart="FALSE" >
      <InputChannels>
        <InputChannel Id="TrackerStream" />
      </InputChannels>
    </Device>    
  </DataCollection>
  
  <PlusOpenIGTLinkServer
    MaxNumberOfIgtlMessagesToSend="10"
    MaxTimeSpentWithProcessingMs="50"
    ListeningPort="18944"
    SendValidTransformsOnly="true"
    OutputChannelId="TrackerStream" >
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="TRANSFORM" />
      </MessageTypes>
      <TransformNames>
        <Transform Name="psm1BaseToWorld" />
        <Transform Name="psm2BaseToWorld" />
        <Transform Name="ecmBaseToWorld" />
        
        <Transform Name="psm1Frame1ToBase" />
        <Transform Name="psm1Frame2ToBase" />
        <Transform Name="psm1Frame3ToBase" />
        <Transform Name="psm1Frame4ToBase" />
        <Transform Name="psm1Frame5ToBase" />
        <Transform Name="psm1Frame6ToBase" />
